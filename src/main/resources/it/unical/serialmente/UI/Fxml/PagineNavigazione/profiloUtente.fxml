<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../CSS/profiloUtente.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.serialmente.UI.Controller.PagineNavigazione.ControllerSezioneUtente">

    <center>
        <ScrollPane id="scrollPaneStatistiche" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
            <VBox spacing="20">

                <VBox fx:id="contenitoreSalutiUtente">
                    <Label fx:id="labelSalutiUtente" text="Benvenuto utente" />
                    <Label fx:id="cambioPreferenze" text="Cambia preferenze" styleClass="label-button"/>
                </VBox>
                <VBox fx:id="contenitoreStatistiche">
                    <HBox spacing="10">
                        <Label text="Statistiche:" />
                    </HBox>

                    <ScrollPane fx:id="scrollPaneStatistiche" fitToHeight="true" pannable="true" vbarPolicy="NEVER">
                        <HBox fx:id="contenitoreCardStatistiche" spacing="20">
                            <VBox styleClass="card">
                                <HBox alignment="CENTER">
                                    <Label styleClass="card-title" text="Tempo serie" />
                                </HBox>

                                <Separator />

                                <HBox alignment="CENTER" spacing="24">
                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="mesiTempoSerie" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Mesi" />
                                    </VBox>

                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="giorniTempoSerie" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Giorni" />
                                    </VBox>

                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="oreTempoSerie" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Ore" />
                                    </VBox>
                                </HBox>
                            </VBox>

                            <VBox styleClass="card">
                                <HBox alignment="CENTER">
                                    <Label styleClass="card-title" text="Episodi visti" />
                                </HBox>

                                <Separator />

                                <HBox alignment="CENTER">
                                    <Label fx:id="numeroEpisodiVisti" styleClass="value-big" text="0" />
                                </HBox>
                            </VBox>


                            <VBox styleClass="card">
                                <HBox alignment="CENTER">
                                    <Label styleClass="card-title" text="Tempo film" />
                                </HBox>

                                <Separator />

                                <HBox alignment="CENTER" spacing="24">
                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="mesiTempoFim" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Mesi" />
                                    </VBox>

                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="giorniTempoFilm" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Giorni" />
                                    </VBox>

                                    <VBox alignment="CENTER" spacing="4">
                                        <Label fx:id="oreTempoFilm" styleClass="value-big" text="0" />
                                        <Label styleClass="value-label" text="Ore" />
                                    </VBox>
                                </HBox>
                            </VBox>
                            <VBox styleClass="card">
                                <HBox alignment="CENTER">
                                    <Label styleClass="card-title" text="Film visti" />
                                </HBox>

                                <Separator />

                                <HBox alignment="CENTER">
                                    <Label fx:id="numeroFilmVisti" styleClass="value-big" text="0" />
                                </HBox>
                            </VBox>

                        </HBox>
                    </ScrollPane>
                </VBox>
                <VBox fx:id="contenitoreSerieTvVisionate">
                    <HBox spacing="10">
                        <Label text="Serie TV visionate:" />
                        <Button fx:id="btnMostraSerieVisionate" text="→" />
                    </HBox>
                    <ListView fx:id="listSerieVisionate" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200" />
                </VBox>
                <VBox fx:id="contenitoreSerieTvPreferite">
                    <HBox spacing="10">
                        <Label text="Serie TV preferite:" />
                        <Button fx:id="btnMostraSeriePreferite" text="→" />
                    </HBox>
                    <ListView fx:id="listSeriePreferite" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200" />
                </VBox>
                <VBox fx:id="contenitoreFilmVisionati">
                    <HBox spacing="10">
                        <Label text="Film visionati:" />
                        <Button fx:id="btnMostraFilmVisionati" text="→" />
                    </HBox>
                    <ListView fx:id="listFilmVisionati" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200" />
                </VBox>
                <VBox fx:id="contenitoreFimPreferiti">
                    <HBox spacing="10">
                        <Label text="Film preferiti:" />
                        <Button fx:id="btnMostraFilmPreferiti" text="→" />
                    </HBox>
                    <ListView fx:id="listFilmPreferiti" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
