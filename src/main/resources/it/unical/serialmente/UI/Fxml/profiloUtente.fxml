<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.serialmente.UI.Controller.SezioneUtenteController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <VBox>
               <children>
                  <VBox fx:id="contenitoreSalutiUtente">
                     <children>
                        <Label fx:id="labelSalutiUtente" text="Benevnuto utente" />
                        <Label text="Label" />
                     </children>
                  </VBox>
                  <VBox fx:id="contenitoreStatistiche">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Statistiche:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <ScrollPane fx:id="scrollPaneStatistiche" fitToWidth="true" pannable="true" vbarPolicy="NEVER">
                           <content>
                              <HBox fx:id="contenitoreCardStatistiche" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox fx:id="contenitoreSerieTvVisionate">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Serie Tv visionate:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Button fx:id="btnMostraSerieVisionate" mnemonicParsing="false" prefHeight="26.0" prefWidth="34.0" text="-&gt;" />
                           </children>
                        </HBox>
                        <ListView fx:id="listSerieVisionate" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="contenitoreSerieTvPreferite">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Serie Tv preferite:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Button fx:id="btnMostraSeriePreferite" mnemonicParsing="false" prefHeight="26.0" prefWidth="34.0" text="-&gt;" />
                           </children>
                        </HBox>
                        <ListView fx:id="listSeriePreferite" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="contenitoreFilmVisionati">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Film visionati:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Button fx:id="btnMostraFilmVisionati" mnemonicParsing="false" prefHeight="26.0" prefWidth="34.0" text="-&gt;" />
                           </children>
                        </HBox>
                        <ListView fx:id="listFilmVisionati" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="contenitoreFimPreferiti">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Film preferiti:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Button fx:id="btnMostraFilmPreferiti" mnemonicParsing="false" prefHeight="26.0" prefWidth="34.0" text="-&gt;" />
                           </children>
                        </HBox>
                        <ListView fx:id="listFilmPreferiti" focusTraversable="false" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
